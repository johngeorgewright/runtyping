{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2018"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "references": [{ "path": "../generator" }]
}
